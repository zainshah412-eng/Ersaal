<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_bg"
    tools:context=".core.ui.fragments.RecentsFragment">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_17sdp"
        android:paddingTop="@dimen/_17sdp"
        android:orientation="vertical">

        <com.example.ersaal.utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="Recents"
            android:textColor="@color/white"
            android:textSize="@dimen/_19ssp"
            app:font_name="objectiveExtraBold" />
        <com.example.ersaal.utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="Last 7 days"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/yellow"
            android:textSize="@dimen/_13ssp"
            app:font_name="objectiveBold" />
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        style="@style/viewBorderColor"
        android:layout_below="@id/header"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOthersList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view"
        tools:listitem="@layout/item_list_recents"/>
</RelativeLayout>