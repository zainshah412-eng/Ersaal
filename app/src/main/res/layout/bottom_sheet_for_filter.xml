<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.example.ersaal.utils.CustomTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:fontFamily="@font/objective_medium"
        android:text="@string/filters"
        android:textColor="@color/yellow"
        android:textSize="@dimen/_14ssp" />

    <AutoCompleteTextView
        android:id="@+id/edtSearchView"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/shape_rectangle_border_grey"
        android:completionThreshold="2"
        android:drawablePadding="28dp"
        android:hint="@string/search"
        android:imeOptions="actionSearch"
        android:includeFontPadding="false"
        android:inputType="text"
        android:maxLines="1"
        android:padding="@dimen/_8sdp"
        android:popupBackground="@drawable/shape_rectangle_border_grey"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textColorHint="@color/grey"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/_8sdp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtSearchView"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rectangle_black"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_7sdp">

                <com.example.ersaal.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/objective_medium"
                    android:text="@string/all"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp" />

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/baseline_close_24" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/shape_rectangle_black"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_7sdp">

                <com.example.ersaal.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/objective_medium"
                    android:text="@string/last_week"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp" />

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/baseline_close_24" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/shape_rectangle_black"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_7sdp">

                <com.example.ersaal.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/objective_medium"
                    android:text="@string/last_month"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp" />

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/baseline_close_24" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rectangle_black"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_7sdp">

                <com.example.ersaal.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/objective_medium"
                    android:text="@string/recently_created"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp" />

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/baseline_close_24" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/shape_rectangle_black"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_7sdp">

                <com.example.ersaal.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/objective_medium"
                    android:text="@string/deleted"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp" />

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/baseline_close_24" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rectangle_black"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_7sdp">

                <com.example.ersaal.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/objective_medium"
                    android:text="@string/recently_created"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp" />

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/baseline_close_24" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/shape_rectangle_black"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_7sdp">

                <com.example.ersaal.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/objective_medium"
                    android:text="@string/deleted"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp" />

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/baseline_close_24" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>