<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bg"
    tools:context=".core.ui.fragments.SettingsFragment">

    <com.example.ersaal.utils.CustomTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:fontFamily="@font/objective_medium"
        android:text="@string/settings"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp" />

    <ImageView
        android:id="@+id/searchImg"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:src="@drawable/search" />

    <RelativeLayout
        android:id="@+id/editCover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/shape_rectangle_grey">

        <ImageView
            android:id="@+id/profileImg"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/profile" />

        <com.example.ersaal.utils.CustomTextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toEndOf="@+id/profileImg"
            android:fontFamily="@font/objective_medium"
            android:text="@string/settings"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <com.example.ersaal.utils.CustomTextView
            android:id="@+id/phoneNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userName"
            android:layout_toEndOf="@+id/profileImg"
            android:fontFamily="@font/objective_medium"
            android:text="@string/dumy_no"
            android:textColor="@color/grey"
            android:textSize="@dimen/_8ssp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/shape_rectangle_yellow_round"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_4sdp">


            <com.example.ersaal.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_toStartOf="@+id/filterImg"
                android:fontFamily="@font/objective_medium"
                android:text="@string/edit"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editCover"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:orientation="vertical">

        <LinearLayout
