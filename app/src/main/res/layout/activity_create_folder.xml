<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bg"
    tools:context=".core.ui.activities.CreateFolderActivity">

    <com.example.ersaal.utils.CustomTextView
        android:id="@+id/tvCreateFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_21sdp"
        android:layout_marginTop="@dimen/_21sdp"
        android:includeFontPadding="false"
        android:text="@string/create_folder_"
        android:textColor="@color/white"
        android:textSize="@dimen/_21ssp"
        app:font_name="objectiveExtraBold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.ersaal.utils.CustomTextView
        android:id="@+id/tvFolderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_18sdp"
        android:padding="@dimen/_5sdp"
        android:text="@string/folder_name"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/tvCreateFolder"
        app:layout_constraintTop_toBottomOf="@id/tvCreateFolder" />

    <com.example.ersaal.utils.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/asterick"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="@id/tvFolderName"
        app:layout_constraintStart_toEndOf="@id/tvFolderName"
        app:layout_constraintTop_toTopOf="@id/tvFolderName" />

    <EditText
        android:id="@+id/edtFolderName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        android:layout_marginStart="@dimen/_21sdp"
        android:layout_marginEnd="@dimen/_21sdp"
        android:background="@drawable/shape_rectangle_grey"
        android:includeFontPadding="false"
        android:inputType="text"
        android:textColor="@color/white"
        android:maxLines="1"
        android:padding="@dimen/_8sdp"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@id/tvFolderName"
        app:layout_constraintTop_toBottomOf="@id/tvFolderName" />

    <com.example.ersaal.utils.CustomTextView
        android:id="@+id/tvAssignIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_9sdp"
        android:padding="@dimen/_5sdp"
        android:text="@string/assign_icon"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/tvFolderName"
        app:layout_constraintTop_toBottomOf="@id/edtFolderName" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_21sdp"
        android:layout_marginEnd="@dimen/_21sdp"
        android:background="@drawable/shape_rectangle_grey"
        android:padding="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="@id/tvAssignIcon"
        app:layout_constraintTop_toBottomOf="@id/tvAssignIcon" />

    <com.example.ersaal.utils.CustomTextView
        android:id="@+id/tvAddContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:padding="@dimen/_5sdp"
        android:text="@string/add_contacts"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/tvAssignIcon"
        app:layout_constraintTop_toBottomOf="@id/recyclerView" />

    <com.example.ersaal.utils.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/asterick"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="@id/tvAddContacts"
        app:layout_constraintStart_toEndOf="@id/tvAddContacts"
        app:layout_constraintTop_toTopOf="@id/tvAddContacts" />

    <AutoCompleteTextView
        android:id="@+id/edtContacts"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        android:layout_marginStart="@dimen/_21sdp"
        android:layout_marginEnd="@dimen/_21sdp"
        android:layout_marginBottom="@dimen/_21sdp"
        android:background="@drawable/shape_rectangle_grey"
        android:completionThreshold="2"
        android:drawablePadding="8dp"
        android:imeOptions="actionSearch"
        android:includeFontPadding="false"
        android:inputType="text"
        android:maxLines="1"
        android:padding="@dimen/_8sdp"
        android:popupBackground="@drawable/shape_rectangle_grey"
        android:textColor="@color/white"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@id/tvAddContacts"
        app:layout_constraintTop_toBottomOf="@id/tvAddContacts" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvContacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_21sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_21sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:background="@drawable/shape_rectangle_grey"
        android:padding="@dimen/_8sdp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/edtContacts"
        app:layout_constraintStart_toStartOf="@id/edtContacts"
        app:layout_constraintTop_toBottomOf="@id/edtContacts" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnContinue"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_35sdp"
        android:layout_marginEnd="@dimen/_35sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:background="@drawable/shape_rectangle_yellow_round"
        android:clickable="false"
        android:fontFamily="@font/objective_regular"
        android:text="@string/create_folder_"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

